{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "declaration":true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "dist",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "./gulpfile.js",
    "example",
    "vscode-addin"
  ]
}
